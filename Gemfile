  gem 'debugger'
  gem 'sass-rails',   '~> 3.2.3'
  gem 'uglifier', '>= 1.0.3'
end

group :test do
  gem "rspec-rails"
  gem "mocha"
  gem "bourne"
  gem "factory_girl_rails"
end

